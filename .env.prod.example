# FreelanceManager - Production Environment Variables
# Copy this file to .env.prod and update with actual values
# NEVER commit .env.prod to git!

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=production
PORT=3000
VERSION=1.0.0

# =============================================================================
# DATABASE (AgentPro Prod Infrastructure)
# =============================================================================
# PostgreSQL connection to infrastructure-postgres-prod (port 5433)
DATABASE_URL="postgresql://postgres:PROD_PASSWORD_HERE@host.docker.internal:5433/freelance_manager_prod"

# =============================================================================
# REDIS (Optional - AgentPro Prod Infrastructure)
# =============================================================================
# Redis connection to infrastructure-redis-prod (port 6380)
REDIS_URL="redis://:PROD_PASSWORD_HERE@host.docker.internal:6380"

# =============================================================================
# RABBITMQ (Optional - AgentPro Prod Infrastructure)
# =============================================================================
# RabbitMQ connection to infrastructure-rabbitmq-prod (port 5673)
RABBITMQ_URL="amqp://admin:PROD_PASSWORD_HERE@host.docker.internal:5673"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# NextAuth configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="CHANGE_ME_64_CHAR_RANDOM_STRING"
NEXTAUTH_URL="https://your-domain.com"

# =============================================================================
# FEATURES
# =============================================================================
# Feature flags
ENABLE_ANALYTICS=true
MAINTENANCE_MODE=false

# =============================================================================
# EMAIL (Optional - for invoice sending)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=FreelanceManager
EMAIL_FROM_ADDRESS=your-email@gmail.com

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=
